<%= content_for :body do %>
<h1>Listing boxs</h1>
<table>
  <thead>
    <tr>
      <th>Dep address</th>
      <th>Arr address</th>
      <th>user_id</th>
      <th>user_email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  	<% if @boxes.nil? %>
  	   <p> Non ci sono pacchi</p>
  	<% else %>
      <% @boxes.uniq.each do |box| %>
        <tr>
          <td><%= box.dep_address %></td>
          <td><%= box.arr_address %></td>
          <td><%= box.user_id %></td>
          <td><%= User.find(box.user_id).email %></td>
          <td><%= link_to 'Show', box %></td>
          <td><%= link_to 'Edit', edit_box_path(box) %></td>
          <td><%= link_to 'Destroy', box, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<% end %>
